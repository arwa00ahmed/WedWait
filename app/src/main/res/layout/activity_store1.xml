<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Store1Activity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="370dp"
        android:layout_height="190dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="117dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/image_store1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/image_e"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="40dp"
                android:layout_marginTop="18dp"

                />
            <TextView
                android:id="@+id/store1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/image_store1"
                android:text="store 1"
                android:textSize="32sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:id="@+id/electrical_Appliances_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/store1_name"
                android:text="Electrical Appliances"
                app:layout_constraintStart_toEndOf="@id/image_store1"
                android:layout_marginStart="15dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                />
            <ImageView
                android:id="@+id/evaluation_store1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/evaluation"
                app:layout_constraintStart_toEndOf="@id/image_store1"
                app:layout_constraintTop_toBottomOf="@id/electrical_Appliances_text"
                android:layout_marginStart="15dp"
                android:layout_marginTop="7dp"
                />
            <TextView
                android:id="@+id/evaluation_num_store1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/evaluation_store1"
                app:layout_constraintTop_toBottomOf="@id/electrical_Appliances_text"
                android:text="4.1"
                android:textSize="13sp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/favorite"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="15dp"
                />
            <ImageView
                android:id="@+id/location_store1"
                android:layout_width="11dp"
                android:layout_height="15dp"
                android:src="@drawable/location"
                app:layout_constraintTop_toBottomOf="@id/image_store1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="50dp"
                android:layout_marginTop="12dp"
                />
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/location_store1"
                app:layout_constraintTop_toBottomOf="@id/image_store1"
                android:layout_marginTop="10dp"
                android:layout_marginStart="2dp"
                android:textColor="@color/color_location"
                />
            <TextView
                android:id="@+id/adress_location1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/location_store1"
                android:text="25 Fauzi ST ."
                android:textSize="15sp"
                android:textColor="@color/color_address"
                android:textStyle="bold"
                android:layout_marginStart="23dp"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:id="@+id/adress_location1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/adress_location1"
                android:text="Smouha .Alex"
                android:textSize="15sp"
                android:textColor="@color/color_address"
                android:textStyle="bold"
                android:layout_marginStart="23dp"

                />
            <ImageView
                android:id="@+id/line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                app:layout_constraintTop_toBottomOf="@id/evaluation_num_store1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="160dp"
                android:layout_marginTop="9dp"
                />
            <TextView
                android:id="@+id/contact_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/line"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="16sp"

                android:textColor="@color/color_location"
                android:layout_marginBottom="50dp"

                />
            <ImageView
                android:id="@+id/phone"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/phone"
                app:layout_constraintStart_toEndOf="@id/line"
                app:layout_constraintTop_toBottomOf="@id/contact_us"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="30dp"
                android:layout_marginEnd="130dp"
                />
            <TextView
                android:id="@+id/num_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/phone"
                app:layout_constraintTop_toBottomOf="@id/contact_us"
                android:text="034 567 899"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                />
            <ImageView
                android:id="@+id/whatsapp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/whatsapp"
                app:layout_constraintTop_toBottomOf="@id/phone"
                app:layout_constraintStart_toEndOf="@id/line"
                android:layout_marginStart="30dp"
                android:layout_marginTop="7dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/whatsapp"
                app:layout_constraintTop_toBottomOf="@id/num_phone"
                android:text="012 3456 789"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>



    <ImageView
        android:id="@+id/store1_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/store1_image"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/discounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_view"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Discounts"
        android:textSize="18sp"
        android:textColor="@color/text"
        android:layout_marginStart="50dp"
        android:layout_marginTop="17dp"
        />
    <TextView
        android:id="@+id/the_newest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_view"
        app:layout_constraintStart_toEndOf="@id/discounts"
        android:text="The Newest"
        android:textSize="18sp"
        android:textColor="@color/text"
        android:layout_marginStart="50dp"
        android:layout_marginTop="17dp"
        />

    <TextView
        android:id="@+id/all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_view"
        app:layout_constraintStart_toEndOf="@id/the_newest"
        android:text="All"
        android:textSize="18sp"
        android:textColor="@color/text"
        android:layout_marginStart="60dp"
        android:layout_marginTop="17dp"
        />

    <FrameLayout
        android:id="@+id/fragment_container_store1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/the_newest"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>


