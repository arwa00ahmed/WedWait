<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/image_atelier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/image_e"

        />
    <TextView
        android:id="@+id/hall_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="atelier 1"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_atelier"
        />
    <ImageView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/image_atelier"
        app:layout_constraintTop_toBottomOf="@id/hall_name"
        android:src="@drawable/location"
        android:layout_marginStart="35dp"
        />

    <TextView
        android:id="@+id/location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Manshia"
        android:textSize="20sp"
        android:textColor="@color/text"
        app:layout_constraintStart_toEndOf="@id/location"
        app:layout_constraintTop_toBottomOf="@id/hall_name"
        android:layout_marginStart="10dp"
        />
    <ImageView
        android:id="@+id/evaluation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/image_atelier"
        app:layout_constraintTop_toBottomOf="@id/location"
        android:src="@drawable/evaluation"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/evaluation_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="4.2"
        android:textSize="20sp"
        android:textColor="@color/text"
        app:layout_constraintStart_toEndOf="@id/evaluation"
        app:layout_constraintTop_toBottomOf="@id/location_name"
        android:layout_marginStart="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>